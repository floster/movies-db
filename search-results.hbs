{{#> _page title="search results"}}

<section class="l-search_header container">
  {{> _search_form}}
</section>
<div class="l-content container">
  <header class="container__header">
    <p>Search results for <mark><strong>fast furious</strong></mark></p>
  </header>
  <section class="app-section m-movies_list">
    {{> _section_header title="movies"}}
    <div class="l-tiles_grid m-movies">
      {{#each parts as |part|}}
      {{> _app_tile tile=part}}
      {{/each}}
    </div>
  </section>
  <section class="app-section m-movies_list">
    {{> _section_header title="collections"}}
    <div class="l-tiles_grid m-movies">
      {{#each collections as |part|}}
      {{> _app_tile tile=part collection=true }}
      {{/each}}
    </div>
  </section>
  <section class="app-section m-movies_list">
    {{> _section_header title="TV shows"}}
    <div class="l-tiles_grid m-movies">
      {{#each tranding_movies as |movie|}}
      {{> _app_tile tile=movie}}
      {{/each}}
    </div>
  </section>
</div>

{{/ _page}}